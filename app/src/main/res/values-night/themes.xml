<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Base.Theme.RandomUser" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/darken_black</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/darken_black</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:colorControlNormal">@color/white</item>
        <item name="android:colorControlActivated">@color/white</item>
        <item name="colorSurface">@color/black_surface</item>

        <item name="android:windowBackground">@color/darken_black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/black_surface</item>
        <item name="fontFamily">@font/proxima_nova</item>
        <item name="android:fontFamily">@font/proxima_nova</item>
    </style>

    <style name="Theme.MyApplication.DetailsTheme" parent="Base.Theme.RandomUser">
        <item name="android:navigationBarColor">@color/darken_black</item>
    </style>

</resources>
